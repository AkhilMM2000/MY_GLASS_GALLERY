<div class="container account-section">
    <div class="row">
        <div class="col-md-3 sidebar">
            <ul class="list-unstyled">
                <li><a href="#">Account Details</a></li>
                <li><a href="#">Orders</a></li>
                <li><a href="#">Downloads</a></li>
                <li><a href="#">Addresses</a></li>
                <li><a href="#">Sign Out</a></li>
            </ul>
        </div>
        <div class="col-md-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4>Your Orders</h4>
                <button class="btn btn-outline-primary">Place New Order</button>
            </div>
        
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>Order ID</th>
                            <th>Product Image</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% order.forEach(item => { %>
                        <tr>
                            <% item.products.forEach(array => { %>
                                <td>
                                    <a href="/detailorder?orderId=<%=item.orderId%>" class="order-link"><%=item.orderId%></a>

                                </td>
                            <td><img src="/productimage/<%=array.productId.productimages[0]%>" alt="Product" class="img-thumbnail" style="width: 50px; height: 50px;"></td>
                            <td><%=array.quantity%></td>
                            <td>&#8377;<%=array.price*array.quantity%></td>
                            <td>
                                <% if (array.status === 'Pending') { %>
                                  <span class="badge badge-danger">Pending</span>
                                <% } else if (array.status === 'delivered') { %>
                                  <span class="badge badge-success">delivered</span>
                                <% } else { %>
                                  <span class="badge badge-cancel">canceled</span>
                                <%} %>
                              </td>
                              <td>
                                <button class="btn btn-sm btn-danger">Cancel</button>
                              </td>
                        </tr>
                        <%})%>
                    <%})%>
                    </tbody>
                </table>
              
            </div>
          
        </div>
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <% if (hasPreviousPage) { %>
                    <li class="page-item">
                        <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
                    </li>
                <% } %>
                
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                    </li>
                <% } %>
                
                <% if (hasNextPage) { %>
                    <li class="page-item">
                        <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
                    </li>
                <% } %>
            </ul>
        </nav>
       
