                        <div class="row">
                            <% for (let i = 0; i < products.length; i++) { %>
                            <div class="col-md-3 col-sm-6 mb-4">
                                <div class="product-card shadow-sm border-0">
                                    <div class="product-image position-relative">
                                        <a href="#">
                                            <img src="productimage/<%= products[i].productimages[0] %>" class="img-fluid w-100" alt="<%= products[i].productName %>">
                                        </a>
                                        <div class="product-overlay position-absolute d-flex justify-content-center align-items-center">
                                            <a href="/productdetail/<%=products[i]._id%>" class="btn btn-primary btn-sm">Quick View</a>
                                        </div>
                                        
                                        <% if (products[i].discountPrice < products[i].price) { %>
                                        <div class="offer-badge position-absolute top-0 start-0 bg-danger text-white px-2 py-1">
                                            <%= Math.round(((products[i].price - products[i].discountPrice) / products[i].price) * 100) %>% OFF
                                        </div>
                                        <% } %>
                                        
                                        <% if (products[i].stock <= 0) { %>
                                        <div class="stock-badge position-absolute bottom-0 start-0 bg-secondary text-white px-2 py-1">
                                            OUT OF STOCK
                                        </div>
                                        <% } %>
                                    </div>
                                    <div class="product-info p-3 text-center">
                                        <h3 class="product-title h6 mb-2"><a href="#" class="text-dark"><%= products[i].productName %></a></h3>
                                        <% if (products[i].discountPrice < products[i].price) { %>
                                        <p class="product-price mb-1">
                                            <span class="old-price text-muted text-decoration-line-through">RS: <%= products[i].price %></span>
                                            <span class="new-price text-danger ms-2">RS:<%= products[i].discountPrice %></span>
                                        </p>
                                        <% } else { %>
                                        <p class="product-price text-danger mb-1">RS:<%= products[i].price %></p>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                        </div>
                        
