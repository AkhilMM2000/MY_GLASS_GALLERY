.price {
    color: #007bff;
}

.out-of-stock .product-image::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0,0,0,0.5);
}

.out-of-stock .product-title a,
.out-of-stock .product-price {
    color: #999;
}
