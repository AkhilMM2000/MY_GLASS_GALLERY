<script>

    document.addEventListener('DOMContentLoaded', function() {
        function activateSteps() {
            const steps = ['step1', 'step2', 'step3'];
            let delay = 0;
    
            steps.forEach((stepId, index) => {
                setTimeout(() => {
                    const step = document.getElementById(stepId);
                    step.classList.add('activating');
                    setTimeout(() => {
                        step.classList.remove('activating');
                        step.classList.add('active');
                    }, 500); // Match this to the animation duration
                }, delay);
                delay += 700; // Adjust this for desired delay between steps
            });
        }
    
        // Run the animation when the page loads
        activateSteps();
    
        // Optionally, run the animation again when a specific button is clicked
        // document.getElementById('reloadButton').addEventListener('click', activateSteps);
    });
    </script>

