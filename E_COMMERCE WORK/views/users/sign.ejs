  <script>
document.getElementById('forgotPasswordForm').addEventListener('submit', async function (event) {
  event.preventDefault();

if(!validatemail()){
  return
}

  const email=document.getElementById('email-password').value
console.log(email);
  try {
    const response = await fetch('/forgetpassword', {
      method: 'PATCH',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ email })
    });

    if (!response.ok) {
      throw new Error(`HTTP error! status: ${response.status}`);
    }
    const data = await response.json();
    Swal.fire({
      title: 'Success!',
      text: data.message,
      icon: 'success',
      confirmButtonText: 'OK'
    }).then((result) => {
      if (result.isConfirmed) {
        window.location.reload();
      }
    });
  } catch (error) {
    Swal.fire({
      title: 'Error!',
      text: `you are not a user please register`,
      icon: 'error',
      confirmButtonText: 'OK'
    });
  }
});




function validatemail() {
  var email = document.getElementById('email-password').value;
  var emailError = document.getElementById('email-error');

  if (email.trim().length === 0) {
    emailError.innerHTML = 'Email is required';
    emailError.style.color = 'red';
    return false;
  }

  // Email validation using a simple regex
  if (!email.match(/^\S+@\S+\.com$/)) {
    emailError.innerHTML = 'Invalid email format';
    emailError.style.color = 'red';
    return false;
  }

  emailError.innerHTML = 'Valid';
  emailError.style.color = 'green';
  return true;
}


