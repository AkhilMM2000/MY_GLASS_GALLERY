}
//////validation for image---------------------------------------------------------------image validation

function validateImageInputs() {
    let inputs = [
        document.getElementById('image1'),
        document.getElementById('image2'),
        document.getElementById('image3')
    ];
    let imageError = document.getElementById('image-error');
    let valid = true;

    inputs.forEach(input => {
        let file = input.files[0];
        if (file) {
            // Check the file type
            if (!file.type.match('image.*')) {
                imageError.innerHTML = 'Only image files are allowed (JPEG, PNG, GIF, etc.)';
                imageError.style.color = 'red';
                input.value = ''; // Clear the input
                valid = false;
            }
        } else {
            imageError.innerHTML = 'Please select an image file for each field';
            imageError.style.color = 'red';
            valid = false;
        }
    });

        imageError.innerHTML = 'All images are valid';
        imageError.style.color = 'green';
   
    return true;
}


