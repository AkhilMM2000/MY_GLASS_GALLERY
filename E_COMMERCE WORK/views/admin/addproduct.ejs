  //--give sweetalert while uploading >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>


    document.getElementById('productForm').addEventListener('submit', async function (event) {
      event.preventDefault(); // Prevent the default form submission

      const form = event.target;
      const formData = new FormData(form);
      if(!validatedescription()||!validatename()||!validateprice()||!validatestock()){
  return
}
      try {
        const response = await fetch('/admin/addproduct', {
          method: 'POST',
          body: formData
        });

        const data = await response.json();
        if (response.ok) {
          // Show a success message using SweetAlert and reload the page on confirmation
          Swal.fire({
            title: 'Success!',
            text: data.message,
            icon: 'success',
            confirmButtonText: 'OK'
          }).then((result) => {
            if (result.isConfirmed) {
              // Reload the page
              window.location.href = '/admin/products';
            }
          });
        } else {
          // Show an error message using SweetAlert
          Swal.fire({
            title: 'Error!',
            text: data.message,
            icon: 'error',
            confirmButtonText: 'OK'
          });
        }
      } catch (error) {
        // Show an error message using SweetAlert
        Swal.fire({
          title: 'Error!',
          text: `An error occurred: ${error.message}`,
          icon: 'error',
          confirmButtonText: 'OK'
        });
      }
    });

    /////////////////////////////////////////////////////////////////////////////End here


    document.addEventListener('DOMContentLoaded', function () {
      let cropper;
      let currentImageInput;

      function handleImageUpload(inputId, previewId) {
        const input = document.getElementById(inputId);
        const preview = document.getElementById(previewId);
        const placeholder = input.previousElementSibling.querySelector('.image-placeholder');

        function showCropper(file) {
          const reader = new FileReader();
          reader.onload = function (event) {
            currentImageInput = input;
            const cropperImage = document.getElementById('cropperImage');
            cropperImage.src = event.target.result;
            $('#cropperModal').modal('show');

            if (cropper) {
              cropper.destroy();
            }

            cropper = new Cropper(cropperImage, {
              aspectRatio: 1,
              viewMode: 1,
            });
          }
          reader.readAsDataURL(file);
        }

        input.addEventListener('change', function (e) {
          const file = e.target.files[0];
          if (file) {
            showCropper(file);
          }
        });

        // Add click event to the preview image to allow changing the image
        preview.addEventListener('click', function () {
          input.click();
        });
      }

      document.getElementById('cropButton').addEventListener('click', function () {
        const croppedCanvas = cropper.getCroppedCanvas({
          width: 700,
          height: 700
        });

        croppedCanvas.toBlob(function (blob) {
          const preview = document.getElementById(currentImageInput.id.replace('image', 'preview'));
          const fileInput = currentImageInput;

          const newFile = new File([blob], 'croppedImage.jpg', { type: 'image/jpeg', lastModified: Date.now() });

          const dataTransfer = new DataTransfer();
          dataTransfer.items.add(newFile);
          fileInput.files = dataTransfer.files;

          const url = URL.createObjectURL(blob);
          preview.src = url;
          preview.style.display = 'block';
          fileInput.previousElementSibling.querySelector('.image-placeholder').style.display = 'none';

          $('#cropperModal').modal('hide');
        });
      });

      handleImageUpload('image1', 'preview1');
      handleImageUpload('image2', 'preview2');
      handleImageUpload('image3', 'preview3');

      $('#cropperModal').on('shown.bs.modal', function () {
        if (cropper) {
          cropper.resize();
        }
      });
    });

    //validation for the product add form
    function validateprice() {

      let price = document.getElementById('product-price').value;
      let priceError = document.getElementById('price-error');

      if (price.trim().length === 0) {
        priceError.innerHTML = 'price is required';
        priceError.style.color = 'red';
        return false;
      }

      if (!price.match(/^\d+(\.\d{1,2})?$/)) {
        priceError.innerHTML = 'It\'s not valid';
        priceError.style.color = 'red';
        return false;
      }

      priceError.innerHTML = 'Valid';
      priceError.style.color = 'green';
      return true;

    }
    function validatestock() {

      let price = document.getElementById('product-stock').value;
      let priceError = document.getElementById('stock-error');

      if (price.trim().length === 0) {
        priceError.innerHTML = 'stock is required';
        priceError.style.color = 'red';
        return false;
      }

      if (!price.match(/^[1-9]\d*(\.\d{1,2})?$/)) {
        priceError.innerHTML = 'It\'s not valid';
        priceError.style.color = 'red';
        return false;
      }


      priceError.innerHTML = 'Valid';
      priceError.style.color = 'green';
      return true;

    }

    function validatename() {
      let name = document.getElementById('name-product').value;
      let nameError = document.getElementById('name-error');

      if (name.trim().length === 0) {
        nameError.innerHTML = 'name is required';
        nameError.style.color = 'red';
        return false;
      }


      if (!name.match(/^[a-zA-Z\s]+$/)) {
        nameError.innerHTML = 'It\'s not valid';
        nameError.style.color = 'red';
        return false;
      }

      nameError.innerHTML = 'Valid';
      nameError.style.color = 'green';
      return true;


    }

