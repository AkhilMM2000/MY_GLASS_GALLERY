            <div class="content-wrapper">
                <h2 class="mb-4">Sales Report</h2>
                
                <!-- Row for summary cards -->
                <div class="row mb-4">
                  <!-- Total Orders -->
                  <div class="col-md-3 mb-3">
                    <div class="card bg-light shadow-sm">
                      <div class="card-body text-center">
                        <h3 class="card-title mb-0">2</h3>
                        <p class="text-muted mb-0">Total Orders</p>
                      </div>
                    </div>
                  </div>
                  
                  <!-- Total Discount -->
                  <div class="col-md-3 mb-3">
                    <div class="card bg-light shadow-sm">
                      <div class="card-body text-center">
                        <h3 class="card-title mb-0">₹0.00</h3>
                        <p class="text-muted mb-0">Total Discount</p>
                      </div>
                    </div>
                  </div>
                  
                  <!-- Total Sales Amount -->
                  <div class="col-md-3 mb-3">
                    <div class="card bg-light shadow-sm">
                      <div class="card-body text-center">
                        <h3 class="card-title mb-0">₹4048.65</h3>
                        <p class="text-muted mb-0">Total Sales Amount</p>
                      </div>
                    </div>
                  </div>
              
                  <!-- Calendar icon -->
                  <div class="col-md-3 mb-3">
                    <div class="card bg-light shadow-sm">
                      <div class="card-body text-center">
                        <i class="mdi mdi-calendar display-4 text-primary"></i>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- Row for filters and table -->
                <div class="row">
                  <div class="col-12">
                    <div class="card shadow">
                      <div class="card-body">
                        <!-- Filter section -->
                        <div class="d-flex justify-content-between align-items-center mb-4">

                            <div class="form-group mb-0">
                                <label for="filters" class="mr-2">Filters:</label>
                                <select id="filters" class="form-control-sm" onchange="applyFilter()">
                                  <option value="daily" <%= selectedFilter === 'daily' ? 'selected' : '' %>>Daily</option>
                                  <option value="weekly" <%= selectedFilter === 'weekly' ? 'selected' : '' %>>Weekly</option>
                                  <option value="monthly" <%= selectedFilter === 'monthly' ? 'selected' : '' %>>Monthly</option>
                                </select>
                              </div>

                          <div class="btn-group">
                            <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="exportDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                              Export
                            </button>
                            <div class="dropdown-menu" aria-labelledby="exportDropdown">
                                <a class="dropdown-item" href="#" onclick="validate('excel')">Excel</a>

                              <a class="dropdown-item" href="#">PDF</a>
                            </div>
                            <button class="btn btn-primary ml-2">+ Generate</button>
                          </div>
                        </div>
                        <!-- Sales report table -->
                        <div class="table-responsive">
                          <table class="table table-hover">
                            <thead class="thead-light">
                                <tr>
                                  <th>Order ID</th>
                                  <th>Date</th>
                                  <th>Product</th>
                                  <th>Quantity</th>
                                  <th>Price</th>
                                  <th>Total</th>
                                  <th>Discount</th>
                                </tr>
                              </thead>
                              <tbody>
                                <% orders.forEach(order => { %>
                                  <% order.products.forEach(product => { %>
                                    <tr>
                                      <td><%= order.orderId %></td>
                                      <td><%= new Date(order.orderDate).toLocaleDateString() %></td>
                                      <td><%= product.productId.productName %></td>
                                      <td><%= product.quantity %></td>
                                      <td><%= product.price.toFixed(2) %></td>
                                      <td><%= (product.quantity * product.price).toFixed(2) %></td>
                                      <td><%= order.discountAmount.toFixed(2) %></td>
                                    </tr>
                                  <% }) %>
                                <% }) %>
                              </tbody>
                              
                          </table>
                          
                        </div>
                      </div>
                      <div class="d-flex justify-content-center">
                        <nav aria-label="Page navigation">
                            <ul class="pagination">
                              <% if (currentPage > 1) { %>
                                <li class="page-item">
                                  <a class="page-link" href="?page=<%= currentPage - 1 %><%= queryString %>" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                  </a>
                                </li>
                              <% } %>
                          
                              <% for (let i = 1; i <= totalPages; i++) { %>
                                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                  <a class="page-link" href="?page=<%= i %><%= queryString %>"><%= i %></a>
                                </li>
                              <% } %>
                          
                              <% if (currentPage < totalPages) { %>
                                <li class="page-item">
                                  <a class="page-link" href="?page=<%= currentPage + 1 %><%= queryString %>" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                  </a>
                                </li>
                              <% } %>
                            </ul>
                          </nav>

                          
                      </div>
                    </div>
                   
                  </div>
                  
                </div>
               
