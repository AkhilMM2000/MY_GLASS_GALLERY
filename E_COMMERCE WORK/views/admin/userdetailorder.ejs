                                        <td><img src="/productimage/<%=item.productId.productimages[0]%>"
                                                alt="Product Image" class="img-thumbnail"
                                                style="width: 60px; height: 60px;"></td>
                                        <td>
                                            <%=item.productId.productName%>
                                        </td>
                                        <td>
                                            <%=item.quantity%>
                                        </td>
                                        <td>RS:<%=item.price%>
                                        </td>
                                        <td>RS:<%=item.price *item.quantity %>
                                        </td>
                                        <td>
                                            <div class="badge badge-success status-indicator"
                                                data-status="<%=item.status%>">
                                                <%=item.status%>
                                            </div>
                                        </td>
                                        <td>
                                            <% if (item.status==='Cancelled' ) { %>
                                                <!-- Show a message or alternative text -->
                                                <span>Status is Cancelled</span>
                                                <% } else if(item.status==='Returned' ) { %>
                                                    <span style="color: green;">return success</span>

                                                <% } else if(item.status!=='Delivered' ) { %>

                                                    <button class="btn btn-sm btn-outline-primary"
                                                        onclick="getProductId('<%=item._id%>'),getStatus(this)"
                                                        data-toggle="modal" data-target="#statusModal">Change
                                                        Status</button>
                                                    <% } else if(item.return_request===true) { %>

                                                        <button class="orange-btn" data-target="#myModal"
                                                            data-toggle="modal"
                                                            onclick="productReturn('<%=orderdata[0].orderId%>','<%=item.productId._id%>','<%=item.return_reason%>')">showrequest</button>

                                                        <% }else{ %>

                                                            <span>Status is delivered</span>
                                                            <%}%>
                                        </td>
                                    </tr>
                                    <%})%>
                                        <!-- Add more rows as needed -->
                            </tbody>
                        </table>
                    </div>

