    <script>

        function getQueryParam(param) {
            const urlParams = new URLSearchParams(window.location.search);
            return urlParams.get(param);
        }

        let orderID = getQueryParam('orderID');


        let productid
        function getProductId(id) {

            productid = id

        }
        let currentStatus
        function getStatus(buttonElement) {
            // Find the closest status-indicator div relative to the clicked button
            const statusDiv = buttonElement.closest('tr').querySelector('.status-indicator');

            // Get the status value from the data-status attribute
            currentStatus = statusDiv.getAttribute('data-status');

            // Output or use the status as needed
            console.log("Current Status:", currentStatus);


        }
        
        document.getElementById('saveStatusBtn').addEventListener('click', () => {
            const selectedStatus = document.getElementById('orderStatus').value;
            console.log(selectedStatus);
            console.log(productid);

            const statusHierarchy = ['Cancelled', 'Pending', 'Dispatch', 'Shipped', 'Delivered'];
            // Check if the status change is valid
            if (statusHierarchy.indexOf(selectedStatus) < statusHierarchy.indexOf(currentStatus)) {
                Swal.fire({
                    icon: 'error',
                    title: 'Invalid Status Change',
                    text: 'You cannot move the order status backward!'
                });
                return;
            }
            if (statusHierarchy.indexOf(selectedStatus) == statusHierarchy.indexOf(currentStatus)) {
                Swal.fire({
                    icon: 'error',
                    title: 'Invalid Status Change',
                    text: `its already ${currentStatus}`
                });
                return;
            }

            fetch(`/admin/detailorder`, {
                method: 'PATCH',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ status: selectedStatus, productid, orderID })
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Close the modal
                        $('#statusModal').modal('hide');
                        // Optionally, update the UI to reflect the new status
                        Swal.fire({
                            icon: 'success',
                            title: 'Order status updated successfully!'
                        }).then(() => {
                            // Reload the page after the Swal modal is closed
                            window.location.reload();
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Update Failed',
                            text: 'Failed to update status'
                        });
                    }
                })
                .catch(error => {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'An error occurred while updating the status'
                    });

                });
        });

    </script>


