        <div class="content-wrapper py-5">
            <div class="container">
                <h2 class="text-center mb-5">Order Details</h2>
                <div class="row">
                    <!-- Address Section -->
                    <div class="col-md-6 mb-4">
                        <div class="card shadow-sm h-100 border-0">
                            <div class="card-body">
                                <h4 class="card-title text-primary mb-3">
                                    <i class="fas fa-shipping-fast mr-2"></i>Shipping Address
                                </h4>
                                <address class="mb-0">
                                    <strong class="d-block text-dark mb-2" style="font-size: 1.1rem;"><%= orderdata[0].address.addressName %></strong>
                                    <span class="text-muted">
                                        <%= orderdata[0].address.addressHouse %> 
                                        <%= orderdata[0].address.addressStreet %> 
                                        <%= orderdata[0].address.addressPost %>
                                    </span><br>
                                    <span class="text-muted"><%= orderdata[0].address.addressCity %></span><br>
                                    <span class="text-muted">
                                        <%= orderdata[0].address.addressDistrict %> 
                                        <%= orderdata[0].address.addressState %> - 
                                        <%= orderdata[0].address.addressPin %>
                                    </span><br>
                                    <span class="d-block mt-2">
                                        <i class="fas fa-phone-alt text-secondary mr-2"></i>
                                        <span class="text-dark"><%= orderdata[0].address.addressMobile %></span>
                                    </span>
                                    <span class="d-block mt-1">
                                        <i class="fas fa-envelope text-secondary mr-2"></i>
                                        <span class="text-dark"><%=orderdata[0].address.addressEmail %></span>
                                    </span>
                                    
                                </address>
                            </div>
                        </div>
                    </div>
                
                    <!-- Order Summary -->
                    <div class="col-md-6 mb-4">
                        <div class="card shadow-sm h-100 border-0">
                            <div class="card-body">
                                <h4 class="card-title text-primary mb-3">
                                    <i class="fas fa-file-invoice mr-2"></i>Order Summary
                                </h4>
                                <ul class="list-unstyled mb-0">
                                    <li class="mb-2"><span class="text-muted">Order ID:</span> <strong class="text-dark"><%= orderdata[0].orderId%></strong></li>
                                    <li class="mb-2"><span class="text-muted">Order Date:</span> <strong class="text-dark"><%=orderdata[0].orderDate.toISOString().split('T')[0]%></strong></li>
                                    <li class="mb-2"><span class="text-muted">Payment Method:</span> <strong class="text-dark"><%= orderdata[0].paymentMethod%></strong></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                
        
                <!-- Product Table -->
                <div class="card shadow-sm mt-4">
                    <div class="card-body">
                        <h4 class="card-title text-primary mb-4"><i class="fas fa-box-open mr-2"></i>Ordered Products</h4>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="thead-light">
                                    <tr>
                                        <th>Image</th>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                        <th>Price</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%orderdata[0].products.forEach(item=>{%>
                                    <tr>
                                        <td><img src="/productimage/<%=item.productId.productimages[0]%>" alt="Product Image" class="img-thumbnail" style="width: 60px; height: 60px;"></td>
                                        <td><%=item.productId.productName%></td>
                                        <td><%=item.quantity%></td>
                                        <td>&#8377;<%=item.price%></td>
                                        <td>&#8377;<%=item.price *item.quantity %></td>
                                        <td><span class="badge badge-success">Delivered</span></td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary">Change Status</button>
                                        </td>
                                    </tr>
                                    <%})%>
                                    <!-- Add more rows as needed -->
                                </tbody>
                            </table>
                        </div>
                        
                        <div class="row justify-content-end mt-4">
                            <div class="col-md-5">
                                <table class="table table-sm">
                                    <tr>
                                        <td class="text-muted">Subtotal:</td>
                                        <td class="text-right">&#8377;1750</td>
                                    </tr>
                                    <tr>
                                        <td class="text-muted">Shipping:</td>
                                        <td class="text-right">&#8377;0</td>
                                    </tr>
                                    <tr class="border-top">
                                        <td><strong>Total Amount:</strong></td>
                                        <td class="text-right"><strong>&#8377;1750</strong></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
        
