<script>
  document.addEventListener('DOMContentLoaded', function() {
    const ctx = document.getElementById('salesOverTimeChart').getContext('2d');
    const salesData = JSON.parse('<%- salesData %>');
    const timeframe = '<%- timeframe %>';

    const labels = salesData.map(item => item._id);
    const data = salesData.map(item => item.totalSales);

    const chart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: labels,
            datasets: [{
                label: 'Sales',
                data: data,
                backgroundColor: 'rgba(54, 162, 235, 0.8)',
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            scales: {
                y: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: 'Sales Amount (RS)'
                    }
                },
                x: {
                    title: {
                        display: true,
                        text: timeframe === 'weekly' ? 'Date' : 'Month'
                    }
                }
            },
            plugins: {
                legend: {
                    display: false
                },
                title: {
                    display: true,
                    text: `Sales Over Time (${timeframe.charAt(0).toUpperCase() + timeframe.slice(1)})`
                }
            }
        }
    });

    // Update total sales
    document.getElementById('totalSales').textContent = `$${Number('<%- totalSales %>').toFixed(2)}`;
});

// Add event listener for timeframe select
document.getElementById('timeFrame').addEventListener('change', function() {
    window.location.href = `/admin/dashboard?timeframe=${this.value}`;
});
</script>



